@model TaxiDispatcherSystem.Models.Vehicle

@{
    ViewData["Title"] = "Редагувати автомобіль";
}

<h2>@ViewData["Title"]</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            
            <div class="form-group mb-2">
                <label asp-for="НомернийЗнак" class="control-label"></label>
                <input asp-for="НомернийЗнак" class="form-control" />
                <span asp-validation-for="НомернийЗнак" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Марка" class="control-label"></label>
                <input asp-for="Марка" class="form-control" />
                <span asp-validation-for="Марка" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Модель" class="control-label"></label>
                <input asp-for="Модель" class="form-control" />
                <span asp-validation-for="Модель" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Колір" class="control-label"></label>
                <input asp-for="Колір" class="form-control" />
                <span asp-validation-for="Колір" class="text-danger"></span>
            </div>
            
            <div class="form-group mt-3">
                <input type="submit" value="Зберегти" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-secondary">Повернутись до списку</a>
            </div>
        </form>
    </div>
</div>