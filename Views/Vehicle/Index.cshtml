@model IEnumerable<TaxiDispatcherSystem.Models.Vehicle>

@{
    ViewData["Title"] = "Автомобілі";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Додати новий автомобіль</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.НомернийЗнак)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Марка)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Модель)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Колір)
            </th>
            <th></th> </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.НомернийЗнак)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Марка)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Модель)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Колір)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Редагувати</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Видалити</a>
            </td>
        </tr>
}
    </tbody>
</table>