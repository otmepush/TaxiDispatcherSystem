@model TaxiDispatcherSystem.Models.Client

@{
    ViewData["Title"] = "Редагування";
}

<h2>Редагувати Клієнта</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Роль" /> <div class="form-group mb-2">
                <label asp-for="Ім_я" class="control-label"></label>
                <input asp-for="Ім_я" class="form-control" />
            </div>
            <div class="form-group mb-2">
                <label asp-for="Прізвище" class="control-label"></label>
                <input asp-for="Прізвище" class="form-control" />
            </div>
            <div class="form-group mb-2">
                <label asp-for="Телефон" class="control-label"></label>
                <input asp-for="Телефон" class="form-control" />
            </div>
            <div class="form-group mb-2">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group mb-2">
                <label asp-for="Пароль" class="control-label"></label>
                <input asp-for="Пароль" class="form-control" />
            </div>
            <div class="form-group mb-2">
                <label asp-for="ClientStatus" class="control-label">Статус (IDLE, IN_RIDE)</label>
                <input asp-for="ClientStatus" class="form-control" />
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Зберегти" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Назад</a>
            </div>
        </form>
    </div>
</div>