@model TaxiDispatcherSystem.Models.Client

@{
    ViewData["Title"] = "Новий Клієнт";
}

<h2>Додати Клієнта</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group mb-2">
                <label asp-for="Ім_я" class="control-label"></label>
                <input asp-for="Ім_я" class="form-control" required />
            </div>
            <div class="form-group mb-2">
                <label asp-for="Прізвище" class="control-label"></label>
                <input asp-for="Прізвище" class="form-control" required />
            </div>
            <div class="form-group mb-2">
                <label asp-for="Телефон" class="control-label"></label>
                <input asp-for="Телефон" class="form-control" required />
            </div>
            <div class="form-group mb-2">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group mb-2">
                <label asp-for="Пароль" class="control-label"></label>
                <input asp-for="Пароль" class="form-control" required />
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Створити" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-secondary">Назад</a>
            </div>
        </form>
    </div>
</div>