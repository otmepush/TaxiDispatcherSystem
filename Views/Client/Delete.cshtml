@model TaxiDispatcherSystem.Models.Client

@{
    ViewData["Title"] = "Видалення";
}

<h2>Видалити Клієнта?</h2>
<h3 class="text-danger">Ви впевнені? Це незворотня дія.</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Ім'я</dt>
        <dd class="col-sm-10">@Model.Ім_я @Model.Прізвище</dd>
        <dt class="col-sm-2">Телефон</dt>
        <dd class="col-sm-10">@Model.Телефон</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Так, видалити" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Скасувати</a>
    </form>
</div>