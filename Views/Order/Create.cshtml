@model TaxiDispatcherSystem.Models.Order
@using TaxiDispatcherSystem.Models

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0">Замовити Таксі</h3>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mb-3">
                        <label class="control-label fw-bold">Звідки їдемо?</label>
                        <input name="OriginAddress" class="form-control" placeholder="Введіть адресу..." required />
                    </div>

                    <div class="form-group mb-3">
                        <label class="control-label fw-bold">Куди їдемо?</label>
                        <input name="DestinationAddress" class="form-control" placeholder="Введіть адресу..." required />
                    </div>

                    <div class="alert alert-success text-center">
                        <h5>Орієнтовна вартість поїздки:</h5>
                        <h2 class="fw-bold">@ViewBag.EstimatedPrice UAH</h2>
                    </div>

                    <input type="hidden" name="EstimatedPrice" value="@ViewBag.EstimatedPrice" />

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-warning btn-lg fw-bold">Замовити</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>